{
	node_js:
	{
		vars:
		{
			ver: '6.3.1'
		},
		download:
		{
			windows: 'https://nodejs.org/dist/v$VER$/node-v$VER$-win-x64.zip',
			mac_osx: 'https://nodejs.org/dist/v$VER$/node-v$VER$-darwin-x64.tar.gz',
			linux: 'https://nodejs.org/dist/v$VER$/node-v$VER$-linux-x64.tar.xz'
		}
	},
	cordova:
	{
		vars:
		{
			ver: 'latest'
		},
        skip:
        {
        	file: 'cordova'
        },
		script:
		{
			unix: 'node $EXEPDIR$/../lib/node_modules/npm/cli.js install -g cordova@$VER$',
			windows: 'node.exe $EXEPDIR$/node_modules/npm/cli.js install -g cordova@$VER$'
		}
	},
	new_proj:
	{
		vars:
		{
			scwd: 'JustAwebbyApp'
		},
		script:
		{
			unix: 'node $EXEPDIR$/../lib/node_modules/cordova/bin/cordova create $SCWD$',
			windows: 'node.exe $EXEPDIR$/node_modules/cordova/bin/cordova create $SCWD$'
		},
		copy:
		{
			'$TWD$': '$CWD$/www'
		}
	},
	sdk_android: 
	{
		vars: 
		{
			ver: '24.4.1'
		},
		download: 
		{
			windows: 'https://dl.google.com/android/android-sdk_r$VER$-windows.zip',
			mac_osx: 'https://dl.google.com/android/android-sdk_r$VER$-macosx.zip',
			linux: 'https://dl.google.com/android/android-sdk_r$VER$-linux.tgz'
		},
		script:
		{
			unix: 'node $EXEPDIR$/../lib/node_modules/cordova/bin/cordova platform add android',
			windows: 'node.exe $EXEPDIR$/node_modules/cordova/bin/cordova platform add android'
		}
	},
	update_android:
	{
		skip:
		{
			file: 'android.jar'
		},
		files:
		{
			input: 'y'
		},	
		script:
		{
			unknown: 'android update sdk --no-ui --filter build-tools-24.0.1,android-23'
		}
	},
	gen_android:
	{
		env:
		{
			ANDROID_HOME: 'android-sdk-%'
		},
		chmod: 
		{
			'android-sdk-%': 777
		},
		script:
		{
			unix: 'node $EXEPDIR$/../lib/node_modules/cordova/bin/cordova build android',
			windows: 'node.exe $EXEPDIR$/node_modules/cordova/bin/cordova build android'
		}
	},
	host_android:
	{
		serve:
		{
			'android.apk': 'platforms/android/build/outputs/apk/android-debug.apk'
		}
	}		
}